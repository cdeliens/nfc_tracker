%h1
  NFC Tracker
%h2
  Route: #{@route.name}
%h2
  Card id: #{@route.card_id}


%h1
  Map

%h3
  First Place: #{@first_place.card_id}
  

#map{style: "width: 100%; height: 600px;"}

%h2
  Time Table

%table.table.table-striped
  %thead
    %tr
      %th
        ="#"
      %th
        Time
      %th
        Lat
      %th
        Long
  %tbody
    -@route.points.each_with_index do |point, index|
      %tr
        %td
          = index + 1
        %td
          = point.time
        %td
          = point.latitude
        %td
          = point.longitude

= hidden_field_tag 'card_id', @route.card_id